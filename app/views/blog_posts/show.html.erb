<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <div class="row">
            <div class="col-xs-12">
                <h1><%= @blog_post.created_at.strftime("%b %-d %Y, %H:%M:%S") %></h1>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12">
                <% if @blog_post.created_at != @blog_post.updated_at %>
                    <em class="pull-left">(Updated at <%= @blog_post.updated_at.strftime("%b %-d %Y, %H:%M:%S") %>)</em>
                <% end %>
                <span class="pull-right">
                    <% if @project.user == current_user %>
                        <%= link_to "Edit", edit_project_blog_post_path(@project, @blog_post), class: 'small' %>
                        |
                        <%= link_to "Delete", project_blog_post_path(@project, @blog_post), method: 'delete', class: 'small', data: { confirm: "Are you sure?" } %>
                        |
                    <% end %>
                    <%= link_to "Back to project", project_path(@project) %>
                </span>
            </div>
        </div>

        <hr/>

        <div class="row">
            <div class="col-xs-12 blog-post">
                <%= raw(@markdown_parser.render(@blog_post.text)) %>
            </div>
        </div>

    </div>
</div>
